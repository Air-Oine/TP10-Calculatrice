<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="4"
    android:rowCount="10"
    tools:context="com.example.admin.tp10_calculatrice.Calculette">

    <TextView
        android:id="@+id/number1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_columnWeight="1"
        android:layout_row="0"
        android:layout_rowWeight="1"

        android:background="@android:color/background_light"

        android:paddingLeft="@dimen/padding_left_text"
        android:textSize="@dimen/stack_text_size"/>

    <TextView
        android:id="@+id/number2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_columnWeight="1"
        android:layout_row="1"
        android:layout_rowWeight="1"

        android:background="@android:color/background_light"

        android:paddingLeft="@dimen/padding_left_text"
        android:textSize="@dimen/stack_text_size"/>

    <TextView
        android:id="@+id/number3"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="4"

        android:layout_columnWeight="1"
        android:layout_row="2"

        android:layout_rowWeight="1"
        android:background="@android:color/background_light"

        android:paddingLeft="@dimen/padding_left_text"
        android:textSize="@dimen/stack_text_size"/>

    <TextView
        android:id="@+id/number4"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="4"

        android:layout_columnWeight="1"
        android:layout_row="3"

        android:layout_rowWeight="1"
        android:background="@android:color/background_light"

        android:paddingLeft="@dimen/padding_left_text"
        android:textSize="@dimen/stack_text_size"/>

    <TextView
        android:id="@+id/saisie"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="4"

        android:layout_columnWeight="1"
        android:layout_row="4"

        android:layout_rowWeight="1"
        android:background="@android:color/holo_blue_dark"

        android:paddingLeft="@dimen/padding_left_text"
        android:textColor="@android:color/black"

        android:textSize="35sp" />

    <Button
        android:id="@+id/button_1"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"

        android:layout_columnWeight="1"
        android:layout_row="5"

        android:layout_rowWeight="1"
        android:background="@android:color/darker_gray"

        android:onClick="one"

        android:text="1"
        android:textSize="@dimen/text_size_button" />

    <Button
        android:id="@+id/button_2"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"

        android:layout_columnWeight="1"
        android:layout_row="5"

        android:layout_rowWeight="1"
        android:background="@android:color/darker_gray"

        android:onClick="two"

        android:text="2"
        android:textSize="@dimen/text_size_button" />

    <Button
        android:id="@+id/button_3"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"

        android:layout_columnWeight="1"
        android:layout_row="5"

        android:layout_rowWeight="1"
        android:background="@android:color/darker_gray"

        android:onClick="three"

        android:text="3"
        android:textSize="@dimen/text_size_button" />

    <Button
        android:id="@+id/button_4"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"

        android:layout_columnWeight="1"
        android:layout_row="6"

        android:layout_rowWeight="1"
        android:background="@android:color/darker_gray"

        android:onClick="four"

        android:text="4"
        android:textSize="@dimen/text_size_button" />

    <Button
        android:id="@+id/button_5"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"

        android:layout_columnWeight="1"
        android:layout_row="6"

        android:layout_rowWeight="1"
        android:background="@android:color/darker_gray"

        android:onClick="five"

        android:text="5"
        android:textSize="@dimen/text_size_button" />

    <Button
        android:id="@+id/button_6"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"

        android:layout_columnWeight="1"
        android:layout_row="6"

        android:layout_rowWeight="1"
        android:background="@android:color/darker_gray"

        android:onClick="six"

        android:text="6"
        android:textSize="@dimen/text_size_button" />

    <Button
        android:id="@+id/button_7"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"

        android:layout_columnWeight="1"
        android:layout_row="7"

        android:layout_rowWeight="1"
        android:background="@android:color/darker_gray"

        android:onClick="seven"

        android:text="7"
        android:textSize="@dimen/text_size_button" />

    <Button
        android:id="@+id/button_8"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"

        android:layout_columnWeight="1"
        android:layout_row="7"

        android:layout_rowWeight="1"
        android:background="@android:color/darker_gray"

        android:onClick="eight"

        android:text="8"
        android:textSize="@dimen/text_size_button" />

    <Button
        android:id="@+id/button_9"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"

        android:layout_columnWeight="1"
        android:layout_row="7"

        android:layout_rowWeight="1"
        android:background="@android:color/darker_gray"

        android:onClick="nine"

        android:text="9"
        android:textSize="@dimen/text_size_button" />

    <Button
        android:id="@+id/button_0"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"

        android:layout_columnWeight="1"
        android:layout_row="8"

        android:layout_rowWeight="1"
        android:background="@android:color/darker_gray"

        android:onClick="zero"

        android:text="0"
        android:textSize="@dimen/text_size_button" />

    <Button
        android:id="@+id/button_dot"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"

        android:layout_columnWeight="1"
        android:layout_row="8"

        android:layout_rowWeight="1"
        android:background="@android:color/darker_gray"

        android:onClick="dot"

        android:text="."
        android:textSize="@dimen/text_size_button" />

    <!--BOUTONS-->

    <Button
        android:id="@+id/button_plus"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="3"

        android:layout_columnWeight="1"
        android:layout_row="5"

        android:layout_rowWeight="1"
        android:background="@color/colorPrimary"

        android:onClick="add"

        android:text="+"
        android:textSize="@dimen/text_size_button"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/button_minus"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="3"

        android:layout_columnWeight="1"
        android:layout_row="6"

        android:layout_rowWeight="1"
        android:background="@color/colorPrimary"

        android:onClick="minus"

        android:text="-"
        android:textSize="@dimen/text_size_button"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/button_divide"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="3"

        android:layout_columnWeight="1"
        android:layout_row="7"

        android:layout_rowWeight="1"
        android:background="@color/colorPrimary"

        android:onClick="divide"

        android:text="/"
        android:textSize="@dimen/text_size_button"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/button_multiply"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_column="3"

        android:layout_columnWeight="1"
        android:layout_row="8"

        android:layout_rowWeight="1"
        android:background="@color/colorPrimary"

        android:onClick="multiply"

        android:text="*"
        android:textSize="@dimen/text_size_button"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/button_back"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"

        android:layout_columnWeight="1"
        android:layout_row="8"

        android:layout_rowWeight="1"
        android:background="@android:color/darker_gray"
        android:onClick="back"
        android:text="@string/back" />

    <Button
        android:id="@+id/button_clear"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"

        android:layout_columnWeight="1"
        android:layout_row="9"

        android:layout_rowWeight="1"
        android:background="@color/colorPrimary"
        android:onClick="clear"
        android:text="@string/clear" />

    <Button
        android:id="@+id/button_pop"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"

        android:layout_columnWeight="1"
        android:layout_row="9"

        android:layout_rowWeight="1"
        android:background="@color/colorPrimary"
        android:onClick="pop"
        android:text="@string/pop" />

    <Button
        android:id="@+id/button_swap"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"

        android:layout_columnWeight="1"
        android:layout_row="9"

        android:layout_rowWeight="1"
        android:background="@color/colorPrimary"
        android:onClick="swap"
        android:text="@string/swap" />

    <Button
        android:id="@+id/button_enter"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="3"

        android:layout_columnWeight="1"
        android:layout_row="9"

        android:layout_rowWeight="1"
        android:background="@color/colorAccent"
        android:onClick="enter"
        android:text="@string/enter" />
</GridLayout>
