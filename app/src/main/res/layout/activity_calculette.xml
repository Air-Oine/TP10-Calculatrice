<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="10"
    android:columnCount="4"
    tools:context="com.example.admin.tp10_calculatrice.Calculette">

    <TextView
        android:id="@+id/number1"
        android:background="@android:color/background_light"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_left_text"

        android:layout_rowWeight="1"

        android:layout_column="0"
        android:layout_row="0"

        android:textSize="@dimen/stack_text_size"
        android:layout_columnSpan="4"/>

    <TextView
        android:id="@+id/number2"
        android:background="@android:color/background_light"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_left_text"

        android:layout_rowWeight="1"

        android:layout_column="0"
        android:layout_row="1"

        android:textSize="@dimen/stack_text_size"
        android:layout_columnSpan="4"/>

    <TextView
        android:id="@+id/number3"
        android:background="@android:color/background_light"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_left_text"

        android:layout_rowWeight="1"

        android:layout_column="0"
        android:layout_row="2"

        android:textSize="@dimen/stack_text_size"
        android:layout_columnSpan="4"/>

    <TextView
        android:id="@+id/number4"
        android:background="@android:color/background_light"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_left_text"

        android:layout_rowWeight="1"

        android:layout_column="0"
        android:layout_row="3"

        android:textSize="@dimen/stack_text_size"
        android:layout_columnSpan="4"/>

    <TextView
        android:id="@+id/saisie"
        android:background="@android:color/holo_blue_dark"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_left_text"

        android:layout_rowWeight="1"

        android:layout_column="0"
        android:layout_row="4"

        android:textSize="35sp"
        android:textColor="@android:color/black"

        android:layout_columnSpan="4"/>

    <Button
        android:id="@+id/button_1"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@android:color/darker_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_columnWeight="1"
        android:layout_rowWeight="1"

        android:layout_column="0"
        android:layout_row="5"
        android:onClick="one"
        android:text="1" />

    <Button
        android:id="@+id/button_2"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@android:color/darker_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_columnWeight="1"
        android:layout_rowWeight="1"

        android:layout_column="1"
        android:layout_row="5"
        android:text="2"
        android:onClick="two"/>

    <Button
        android:id="@+id/button_3"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@android:color/darker_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_columnWeight="1"
        android:layout_rowWeight="1"

        android:layout_column="2"
        android:layout_row="5"
        android:text="3"
        android:onClick="three"/>

    <Button
        android:id="@+id/button_4"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@android:color/darker_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_columnWeight="1"
        android:layout_rowWeight="1"

        android:layout_column="0"
        android:layout_row="6"
        android:text="4"
        android:onClick="four"/>

    <Button
        android:id="@+id/button_5"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@android:color/darker_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_columnWeight="1"
        android:layout_rowWeight="1"

        android:layout_column="1"
        android:layout_row="6"
        android:text="5"
        android:onClick="five"/>

    <Button
        android:id="@+id/button_6"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@android:color/darker_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_columnWeight="1"
        android:layout_rowWeight="1"

        android:layout_column="2"
        android:layout_row="6"
        android:text="6"
        android:onClick="six"/>

    <Button
        android:id="@+id/button_7"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@android:color/darker_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_columnWeight="1"
        android:layout_rowWeight="1"

        android:layout_column="0"
        android:layout_row="7"
        android:text="7"
        android:onClick="seven"/>

    <Button
        android:id="@+id/button_8"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@android:color/darker_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_columnWeight="1"
        android:layout_rowWeight="1"

        android:layout_column="1"
        android:layout_row="7"
        android:text="8"
        android:onClick="eight"/>

    <Button
        android:id="@+id/button_9"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@android:color/darker_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_columnWeight="1"
        android:layout_rowWeight="1"

        android:layout_column="2"
        android:layout_row="7"
        android:text="9"
        android:onClick="nine"/>

    <Button
        android:id="@+id/button_0"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@android:color/darker_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_columnWeight="1"
        android:layout_rowWeight="1"

        android:layout_column="1"
        android:layout_row="8"
        android:text="0"
        android:onClick="zero"/>

    <Button
        android:id="@+id/button_dot"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@android:color/darker_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_columnWeight="1"
        android:layout_rowWeight="1"

        android:layout_column="2"
        android:layout_row="8"
        android:text="."
        android:onClick="dot"/>

    <!--BOUTONS-->

    <Button
        android:id="@+id/button_plus"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_columnWeight="1"
        android:layout_rowWeight="1"

        android:layout_column="3"
        android:layout_row="5"
        android:onClick="add"
        android:text="+"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/button_minus"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_columnWeight="1"
        android:layout_rowWeight="1"

        android:layout_column="3"
        android:layout_row="6"
        android:text="-"
        tools:ignore="HardcodedText"
        android:onClick="minus"/>

    <Button
        android:id="@+id/button_divide"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_columnWeight="1"
        android:layout_rowWeight="1"

        android:layout_column="3"
        android:layout_row="7"
        
        android:text="/"
        tools:ignore="HardcodedText"
        android:onClick="divide"/>

    <Button
        android:id="@+id/button_multiply"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_columnWeight="1"
        android:layout_rowWeight="1"

        android:layout_column="3"
        android:layout_row="8"
        android:background="@color/colorPrimary"
        android:onClick="multiply"
        android:text="*"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/button_back"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@android:color/darker_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_columnWeight="1"
        android:layout_rowWeight="1"

        android:layout_column="0"
        android:layout_row="8"
        android:text="@string/back"
        android:onClick="back"/>

    <Button
        android:id="@+id/button_clear"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_columnWeight="1"
        android:layout_rowWeight="1"

        android:layout_column="0"
        android:layout_row="9"
        android:text="@string/clear"
        android:onClick="clear"/>

    <Button
        android:id="@+id/button_pop"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_columnWeight="1"
        android:layout_rowWeight="1"

        android:layout_column="1"
        android:layout_row="9"
        android:text="@string/pop"
        android:onClick="pop"/>

    <Button
        android:id="@+id/button_swap"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_columnWeight="1"
        android:layout_rowWeight="1"

        android:layout_column="2"
        android:layout_row="9"
        android:text="@string/swap"
        android:onClick="swap"/>

    <Button
        android:id="@+id/button_enter"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_columnWeight="1"
        android:layout_rowWeight="1"

        android:layout_column="3"
        android:layout_row="9"
        android:onClick="enter"
        android:text="@string/enter" />
</GridLayout>
